<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!--<link rel="stylesheet" href="Task.css"> -->
    <link rel="stylesheet" href="/Css/GlobalStyle/global.css">
    <link rel="stylesheet" href="/Css/Task_Page/MainContent.css">
    <link rel="stylesheet" href="/Css/Task_Page/Sidebar.css">
    <link rel="stylesheet" href="/Css/GlobalStyle/Scrollbar.css">
    
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script> -->
    
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="toggle-half-circle" id="toggleSidebar"></div>
            <div class="profile">
                <img src="https://via.placeholder.com/134x134" alt="Profile Picture" class="profile-image">
            </div>
            <nav>
                <a href="#" class="nav-link">Dashboard</a>
                <a href="#" class="nav-link">Home</a>
                <a href="#" class="nav-link">Messages</a>
                <a href="#" class="nav-link">Analytics</a>
                <a href="#" class="nav-link">Settings</a>
            </nav>
        </div>
    
        <!-- Main Content -->
        <div class="main-content">
            <div class="upcoming-tasks">
                <div class="section-header">
                    <h2 class="section-title">Upcoming Tasks</h2>
                    <Button class="button-Add">Add Task</Button>
                </div>
                <div id="task-list">
                    <!-- Tasks will be dynamically added here -->
                </div>
                <div class="custom-scrollbar">
                    <div class="custom-scrollbar-thumb"></div>
                </div>
            </div>
            <div class="categories">
                <div class="section-header">
                    <h2 class="section-title">Categories</h2>
                    <button class="button-Add">Add Category</button>
                </div>
                
                
                <div id="category-list">
                    <!-- Categories will be dynamically added here -->
                </div>
            </div>
            <div class="notifications">
                <h2 class="section-title">Notifications</h2>
                
                <div id="notification-list">
                    <!-- Notifications will be dynamically added here -->
                </div>
            </div>
            <div class="march-2022">
                <h2 class="section-title">March 2022</h2>
            </div>
            <div class="calendar-view">
                <h2 class="section-title">Calendar View</h2>
                <div id="calendar">
                    <div class="calendar-header">
                        <!-- Dynamic here -->                        
                    </div>
                    <div class="calendar-body">
                        <!-- Days of the month will go here -->
                    </div>
                </div>
            </div>

            <div id="taskModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h2>Task Details</h2>
                    <div id="taskDetails">
                        <!-- Task details will be dynamically inserted here -->
                    </div>
                </div>
            </div>

            <!-- Modal Structure for Tasks -->
            <div id="tasksForCategoryModal">
                <div class="TasksForCategoryModal-content">
                    <h2>Tasks for Category</h2>                    
                    <ul id="taskList"></ul> <!-- Task list will be dynamically inserted here -->
                    <button id="closeModal">Close</button>
                </div>
            </div>

            <div class="goal-progress">
                <h2 class="section-title">Goal Progress</h2>
            </div>
        </div>
    </div>
    <script src="Task.js"></script>
    <script src="\Js\Scrollbar.js"></script>
</body>
</html>
